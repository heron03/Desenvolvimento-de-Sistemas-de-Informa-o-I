@page "/Produto/ListaProduto"
@using System.Net.Http
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Entrega4.Shared;

<h1>Produtos</h1>
<button class="btn btn-primary" onclick="" style="width:110px;">Cadastrar produto</button>
@if (produtoList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Pre√ßo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in produtoList)
            {
                <tr>
                    <td>@produto.Nome</td>

                    <td>@String.Format("{0, 0:C2}", @produto.Preco)</td>
                    <td><button class="btn btn-primary" onclick="" style="width:110px;">Editar</button>
                    </td>
                    <td><button class="btn btn-danger" onclick="">
                            Deletar</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Produto> produtoList = new List<Produto>();

    protected override async Task OnInitializedAsync()
    {

        var products = await Http.GetFromJsonAsync<List<Produto>>("/Produto/Lista");
        foreach (var item in products)
        {
            produtoList.Add(item);
        }

    }

}
