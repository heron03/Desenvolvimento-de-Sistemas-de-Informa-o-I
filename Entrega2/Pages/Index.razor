@page "/"

<h2>Validação de Formulário</h2>
<hr /> 
<EditForm Model="@formvalidacao">
    <DataAnnotationsValidator />
  <div class="form-row">
    <div class="col-md-2 mb-3">
      <label for="titulo">Titulo</label>
        <InputSelect class="custom-select" @bind-Value="@formvalidacao.titulo">
            <option value="">Selecine o Título ...</option>
            <option value="Mr">Mr</option>
            <option value="Mrs">Mrs</option>
            <option value="Miss">Miss</option>
            <option value="Mis">Mis</option>
        </InputSelect>
        <ValidationMessage For="@(()=> formvalidacao.titulo)" />
    </div>
    <div class="col-md-5 mb-3">
      <label for="Nome">Primeiro Nome</label>
        <InputText @bind-Value="@formvalidacao.Primeironome" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.Primeironome)" />
    </div>
    <div class="col-md-5 mb-3">
      <label for="Sobrenome">Sobrenome</label>
        <InputText @bind-Value="@formvalidacao.Sobrenome" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.Sobrenome)" />
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="dataAniversario">Data de Aniversário</label>
        <InputDate @bind-Value="@formvalidacao.dataAniversario" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.dataAniversario)" />
    </div>
    <div class="col-md-6 mb-3">
      <label for="Email">Email</label>
        <InputText @bind-Value="@formvalidacao.Email" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.Email)" />
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="Senha">Senha</label>
        <InputText type="password" @bind-Value="@formvalidacao.Senha" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.Senha)" />
    </div>
    <div class="col-md-6 mb-3">
      <label for="ConfirmarSenha">Confirmar Senha</label>
        <InputText type="password" @bind-Value="@formvalidacao.ConfirmarSenha" class="form-control" />
        <ValidationMessage For="@(()=> formvalidacao.ConfirmarSenha)" />
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
        <InputCheckbox @bind-Value="@formvalidacao.Termos" class="form-check-input"/>
        <ValidationMessage For="@(()=> formvalidacao.Termos)" />
      <label class="form-check-label" for="invalidCheck">
        Eu aceitos os Termos e condições
      </label>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Salvar</button>
</EditForm>
@code {
    FormularioValidacao formvalidacao = new FormularioValidacao();
}