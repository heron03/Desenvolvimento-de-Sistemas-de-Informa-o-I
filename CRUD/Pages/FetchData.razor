@page "/fetchdata"

@using CRUD.Data
@inject ProdutoService ProdutoService

<h1>Produtos</h1>
@if (produtos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in produtos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco</td>
                    <td><button class="btn btn-primary" onclick="@EditProduto(@produto.Id)" style="width:110px;">Editar</button>
                    </td>
                    <td><button class="btn btn-danger" onclick="@DeleteProduto(@produto.Id)">
                            Deletar</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Produto[] produtos;

    protected override async Task OnInitializedAsync()
    {
        produtos = await ProdutoService.GetProdutoAsync(DateTime.Now);
    }
    protected async Task EditProduto(int produtoId)
    { }
    protected async Task DeleteProduto(int produtoId)
    {
    }
}
